{
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon-128.png",
    "default_title": "Clone Bitbucket PR"
  },
  "name": "Clone Bitbucket PR",
  "description": "Copies to clipboard the git command to clone a PR in a new branch for reviewing",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "version": "0.0.0.1",
  "manifest_version": 2
}